#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    printf("Hany darab szam lesz: ");
    scanf("%d", &n);
    double * tomb = (double*)malloc(sizeof(double) * n);

    printf("Kerem a szamokat!\n");
    for(int i=0;i<n;++i)
    {
        printf("%d. szam: ",i+1);
        scanf("%lf",&tomb[i]);
    }
    printf("\nForditva:\n");
    for(int i = n-1;i>=0;--i)
    {
        printf("%d. szam: %g \n",i+1,tomb[i]);
    }

    free(tomb);
    return 0;
}
