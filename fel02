#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char * masolat(char *t)
{
    int n = strlen(t);
    char *seged = (char*)malloc((n+1) * sizeof(char));
    strcpy(seged,t);
    return seged;
}

char *hozzafuz(char *tk, char *tv)
{
    int n = strlen(tk) + strlen(tv);
    char *seged = (char*) malloc((n + 1) * sizeof(char));
    strcpy(seged, tk);
    strcat(seged, tv);
    free(tk);
    return seged;
}

int main()
{
    char *x = masolat("alma");
    x = hozzafuz(x,"fa");
    printf("%s\n",x);
    free(x);
    return 0;
}
