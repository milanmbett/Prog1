#include <stdio.h>
#include <stdlib.h>

int alap(int a)
{
    a = 1;
    return a;
}
int plusz1(int a)
{
    a = a+1;
    return a;
}
int negal(int a)
{
    a = a*-1;
    return a;
}
int szor2(int a)
{
    a = a*2;
    return a;
}

int main()
{
    int a = 1;
    printf("0. Alapertek visszaallitasa (a = 1)\n"
       "1. Hozzaad 1-et\n"
       "2. Megforditja az elojelet\n"
       "3. Szorozza 2-vel\n"
       "9. Kilepes\n");
    int valasz;
    do
    {
        scanf("%d",&valasz);
        switch(valasz)
        {
        case 0: a = alap(a);
            break;
        case 1: a = plusz1(a);
            break;
        case 2: a = negal(a);
            break;
        case 3: a = szor2(a);
            break;
        case 9: printf("Viszlat!\n");
            break;
        default:
            printf("Ismeretlen parancs!\n");
        }

        printf("Ertek: %d\n",a);

    }while(valasz!=9);

    return 0;
}
